<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="5dp"
    android:background="@drawable/back10"
    tools:context="com.example.admin.smarthomemain.TempActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fortemp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/shapebutton"
        android:transitionName="myTempButton">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="38dp"
            android:src="@drawable/fan"
            android:transitionName="termo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Ventilation"
            android:transitionName="texting"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="38dp"
            android:src="@drawable/fan"
            android:transitionName="termo"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fortemp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/shapebutton"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/temp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textSize="19sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25Â°C"
                        android:layout_margin="4dp"
                        android:textSize="28sp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/shapebutton"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/co2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gas Status"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/gasstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:layout_margin="4dp"
                        android:textSize="28sp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/shapebutton"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/humid"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:layout_margin="4dp"
                        android:textSize="28sp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:background="@drawable/shapebutton">
                <Switch
                    android:id="@+id/ventcontswi"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Automatic control"
                    android:textSize="25sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapebutton"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seekbar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:text="Temperature treshold: 0%"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:gravity="center">
                    <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                        android:id="@+id/rangeSeekbar3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        app:corner_radius="3"
                        app:min_value="0"
                        app:left_thumb_color="#fdfdfd"
                        app:max_value="100"
                        app:bar_color="#fafafa"
                        app:bar_highlight_color="#998d87"
                        android:layout_weight="30"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send Treshold"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:id="@+id/send1"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/shapebutton"
                        android:layout_weight="70"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapebutton"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seekbar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:text="Gas treshold: 0%"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:gravity="center">
                    <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                        android:id="@+id/rangeSeekbar4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        app:corner_radius="3"
                        app:min_value="0"
                        app:left_thumb_color="#fdfdfd"
                        app:max_value="100"
                        app:bar_color="#fafafa"
                        app:bar_highlight_color="#998d87"
                        android:layout_weight="30"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send Treshold"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:id="@+id/send2"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/shapebutton"
                        android:layout_weight="70"/>

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/shapebutton"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Second Floor:\n0%"
                        android:id="@+id/motor1text"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"/>

                    <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                        android:id="@+id/rangeSeekbar5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        app:corner_radius="3"
                        app:min_value="0"
                        app:left_thumb_color="#fdfdfd"
                        app:max_value="100"
                        app:bar_color="#fafafa"
                        app:bar_highlight_color="#998d87"
                        android:layout_weight="30"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/shapebutton"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Third Floor:\n0%"
                        android:id="@+id/motor2text"
                        android:textSize="22sp"
                        android:textColor="#FFFFFF"/>
                    <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                        android:id="@+id/rangeSeekbar6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        app:corner_radius="3"
                        app:min_value="0"
                        app:left_thumb_color="#fdfdfd"
                        app:max_value="100"
                        app:bar_color="#fafafa"
                        app:bar_highlight_color="#998d87"
                        android:layout_weight="30"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/use"
                android:clickable="true"
                android:background="@drawable/shapebutton">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="Use motors"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
